<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Mapa de √çndice UV</title>

  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  <div class="container">
    <h1>üåû √çndice UV Interativo</h1>
    <p>Clica no mapa para veres o √≠ndice UV em qualquer lugar</p>
    
    <div id="map"></div>

    <div class="result">
      <h2>Resultado</h2>
      <p id="uv">‚òÄÔ∏è UV: ---</p>
      <p id="level">N√≠vel: ---</p>
      <p id="advice">---</p>
    </div>
  </div>

  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
  const map = L.map("map").setView([38.7223, -9.1393], 5);

  L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    attribution: "¬© OpenStreetMap"
  }).addTo(map);

  let marker;

  map.on("click", async (e) => {
    const { lat, lng } = e.latlng;

    if (marker) map.removeLayer(marker);
    marker = L.marker([lat, lng]).addTo(map);

    const response = await fetch("/uv", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ lat, lon: lng })
    });

    const data = await response.json();

    document.getElementById("uv").innerText = `‚òÄÔ∏è UV: ${data.uv}`;
    document.getElementById("level").innerText = `N√≠vel: ${data.level}`;
    document.getElementById("advice").innerText = data.advice;

    // üé® cores din√¢micas
    const box = document.querySelector(".result");
    box.className = "result"; // reset

    if (data.level === "Baixo") box.classList.add("uv-low");
    else if (data.level === "Moderado") box.classList.add("uv-moderate");
    else if (data.level === "Alto") box.classList.add("uv-high");
    else if (data.level === "Muito alto") box.classList.add("uv-very-high");
    else if (data.level === "Extremo") box.classList.add("uv-extreme");
  });
</script>


</body>
</html>
